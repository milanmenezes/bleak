{{!< default}}

{{#post}}

<main class="content" role="main">

	    <article class="{{post_class}}">

				<div class="wrapper-o">
					<div class="wrapper">

						{{#if @page.show_title_and_feature_image}}
						<header class="post-header">
							<div class="inner">
								<h1 class="post-title">{{{title}}}</h1>
							</div>
						</header>
						{{/if}}

						<div class="inner">
							<section class="post-content">
								{{content}}
							</section>
						</div>

				    {{/post}}
					</div>
				</div>

	    </article>

</main>
